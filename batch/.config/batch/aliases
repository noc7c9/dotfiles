alias=doskey /macros
aliases=doskey /macros

;= conemu new tab and splits
.nt=$* -new_console
.sp=$* -new_console:sH
.vs=$* -new_console:sV

;= basic commands
which=where $*
sudo="C:\Program Files\ConEmu\ConEmu\csudo.cmd" $*
ge=cmd /c "start nvim-qt $*"

;= shell util modifications
cd=cd $* $T ls
mkdir=c:\cygwin64\bin\mkdir -p $*
mkcd=c:\cygwin64\bin\mkdir -p $* $T cd $*

..=cd .. $T ls
...=cd ../.. $T ls
....=cd ../../.. $T ls
.....=cd ../../../.. $T ls

lsa=ls -A

;= fix pip to python 3
pip=pip3 $*

;= use tldr instead of man usually
man=tldr $* | less
realman=man $*

;= folder shortcuts
p=p: $T cd p:/$* $T ls
dl=c: $T cd c:/users/user/downloads/$* $T ls
vms=p: $T cd p:/arch-vm-share/$* $T ls
gdrive=p: $T cd p:/$$gdrive/$* $T ls
.files=p: $T cd p:/$$gdrive/.files/$* $T ls

;= git commands
gita=echo use ga instead
gitaa=echo use gaa instead
gitb=echo use gb instead
gitco=echo use gco instead
gitd=echo use gd instead
gitds=echo use gds instead
gitl=echo use gl instead
gitll=echo use gll instead
gitlll=echo use glll instead
gits=echo use gs instead
gitx=echo use gx instead
gitxa=echo use gxa instead

g=git $*
ga=git a $*
gaa=git aa $*
gb=git b $*
gco=git co $*
gd=git d $*
gds=git ds $*
gl=git l $*
gll=git ll $*
glll=git lll $*
glast=git last $*
gs=git s $*
gx=git x $*
gxa=git xa $*
gxm=git x -m "$*"
gxam=git xa -m "$*"

;= conemu
ct=conemu-task $*

;= calculator
:= note: this part must be last
-=py -c "print($*)"
;=py -c "print($*)"
